<%= content_for :header do %>
<%= javascript_include_tag "dataTables.bootstrap","posts" %>
<%end%>
<div class="table-responsive">
	<h2 class="page-header">Tweet Details</h2>
	<div style="float:right">
		<%= link_to "Home",root_path,html_options = {:class => "btn btn-primary"}%>
	</div>
	<br>
	<br>

	<table class="table table-striped table-bordered" id="posts_table">
		<thead>
			<tr>
				<th>Tweet Id</th>
				<th>Tweets</th>
				<th>Favorites Count</th>
				<th>Retweets Count</th>
				
			</tr>
		</thead>
		<tbody>
			<%@ids.each do |i|%>
			<tr>
				<td><%= i.id%></td>
				<td><%= i.text%></td>
				<td><%= favorite(i.id) %></td>
				<td><%= retweets(i.id) %></td>
			</tr>
			<% end %>
		</tbody>
	</table>
</div>
