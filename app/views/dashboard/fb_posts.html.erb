<%= content_for :header do %>
<%= javascript_include_tag "dataTables.bootstrap","posts" %>
<%end%>
<div class="table-responsive">
	<h2 class="page-header">Facebook Posts</h2>
	<div style="float:right">
		<%= link_to "Home",root_path,html_options = {:class => "btn btn-primary"}%>
	</div>
	<br>
	<br>

	<table class="table table-striped table-bordered" id="posts_table">
		<thead>
			<tr>
				<th>Post Type</th>
				<th>Post</th>
				<th>Total Likes</th>
				<th>Total Comments</th>
			</tr>
		</thead>
		<tbody>
			<%@posts.each do |i|%>
			<tr>
				<td><%= post(i)[0]%></td>
				<td><a href=<%= post(i)[1]%> target= "_blank"><%= post(i)[1]%></a></td>
				<% a=post(i)[2]%>
				<td> <%= link_to a,dashboard_likes_path(:postidentifier => i.identifier), target: '_blank'%> </td>
				<% b=post(i)[3]%>
				<td> <%= link_to b,dashboard_comments_path(:postidentifier => i.identifier), target: '_blank'%> </td>
			</tr>
			<% end %>
		</tbody>
	</table>
</div>
