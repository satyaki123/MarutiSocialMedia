<%= content_for :header do %>
<%= javascript_include_tag "dataTables.bootstrap","posts" %>
<%end%>
<div class="table-responsive">
	<h2 class="page-header">Tweet Details</h2>
	<div style="float:right">
		<%= link_to "Home",root_path,html_options = {:class => "btn btn-primary"}%>
	</div>
	<br>
	<br>

	<table class="table table-striped table-bordered" id="posts_table">
		<thead>
			<tr>
				<th>Followers ID</th>
				<th>Screen Name</th>
				
			</tr>
		</thead>
		<tbody>
			<%@obj3.each do |f|%>
			<tr>
				
				<td><%= follower_details(f)[0] %></td>
				<td><%= follower_details(f)[1] %></td>
			</tr>
			<% end %>
		</tbody>
	</table>
</div>
